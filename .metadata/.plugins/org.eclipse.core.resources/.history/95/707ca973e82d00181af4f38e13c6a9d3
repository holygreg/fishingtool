package view;

import java.awt.GridLayout;
import java.awt.event.ActionListener;

import javax.swing.JComboBox;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.border.CompoundBorder;
import javax.swing.border.EmptyBorder;
import javax.swing.border.LineBorder;
import javax.swing.border.TitledBorder;

import control.PanelController;
import util.BaitType;
import util.Color;
import view.ifaces.CreateBaitPanel;

public class CreateBaitPanelImpl extends ControlledPanel implements CreateBaitPanel {
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	private JTextField nameField;
	private JTextField brand_field;
	private JTextField price_field;
	private JTextField weightField;
	private JTextField shopField;
	private JLabel shop;
	private JLabel weight;
	private JComboBox<Color> colorBox;
	private JLabel color;
	private JComboBox<BaitType> baitBox;
	private JLabel bait_type;
	private JLabel price;
	private JLabel brand;
	private JLabel name;

	/**
	 * Create the panel.
	 */
	public CreateBaitPanelImpl(PanelController panelController) {
		super(panelController);
		setBackground(Color.WHITE);
		setLayout(null);

		JPanel panel = new JPanel();
		panel.setBackground(Color.WHITE);
		panel.setBorder(
				new CompoundBorder(
						new TitledBorder(new LineBorder(new Color(0, 0, 0), 2), "K\u00F6der anlegen",
								TitledBorder.CENTER, TitledBorder.ABOVE_TOP, null, new Color(51, 51, 51)),
						new EmptyBorder(20, 20, 20, 20)));
		panel.setBounds(12, 12, 309, 248);
		add(panel);
		panel.setLayout(new GridLayout(7, 2, 1, 4));

		name = new JLabel("Produktname");
		panel.add(name);

		nameField = new JTextField();
		panel.add(nameField);
		nameField.setColumns(10);

		brand = new JLabel("Marke");
		panel.add(brand);

		brand_field = new JTextField();
		panel.add(brand_field);
		brand_field.setColumns(10);

		price = new JLabel("Preis");
		panel.add(price);

		price_field = new JTextField();
		panel.add(price_field);
		price_field.setColumns(10);

		bait_type = new JLabel("Ködertyp");
		panel.add(bait_type);

		baitBox = new JComboBox<BaitType>(BaitType.values());
		panel.add(baitBox);

		color = new JLabel("Farbe");
		panel.add(color);

		colorBox = new JComboBox<Color>(Color.values());
		panel.add(colorBox);

		weight = new JLabel("Gewicht");
		panel.add(weight);

		weightField = new JTextField();
		panel.add(weightField);
		weightField.setColumns(10);

		shop = new JLabel("Geschäft");
		panel.add(shop);

		shopField = new JTextField();
		panel.add(shopField);
		shopField.setColumns(10);

	}

	@Override
	public void setNameFieldActionListener(ActionListener actionListener) {
		nameField.addActionListener(actionListener);
	}

	@Override
	public void setBrandFieldActionListener(ActionListener actionListener) {
		brand_field.addActionListener(actionListener);
	}

	@Override
	public void setPriceFieldActionListener(ActionListener actionListener) {
		price_field.addActionListener(actionListener);
	}

	@Override
	public void setWeightFieldActionListener(ActionListener actionListener) {
		weightField.addActionListener(actionListener);
	}

	@Override
	public void setShopFieldActionListener(ActionListener actionListener) {
		shopField.addActionListener(actionListener);
	}

	@Override
	public void setColorBoxActionListener(ActionListener actionListener) {
		colorBox.addActionListener(actionListener);
	}

	@Override
	public void setBaitBoxActionListener(ActionListener actionListener) {
		baitBox.addActionListener(actionListener);
	}
}

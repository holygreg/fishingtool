	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	private PanelController panelController;

	public ControlledPanel(PanelController panelController) {
		this.panelController = panelController;
//		this.panelController.setPanel(this);
//		initPanel();
//		this.panelController.setActionListeners();
	}
	
	protected abstract void initPanel();
	
	public static ControlledPanel createInitializedInstance(PanelController panelController) {
		ControlledPanel controlledPanel = new ControlledPanel(panelController);
	}

}

package view;

import javax.swing.JLabel;
import javax.swing.JMenuItem;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

public class MenuItemContainer {

	private String name;

	private JMenuItem menuItem;

	private ControlledPanel controlledPanel;

	public MenuItemContainer(String name, JMenuItem menuItem, ControlledPanel controlledPanel) {
		this.name = name;
		this.menuItem = menuItem;
		this.controlledPanel = controlledPanel;
		this.controlledPanel.setBorder(new EmptyBorder(5, 5, 5, 5));
		this.controlledPanel.setLayout(null);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public JMenuItem getMenuItem() {
		return menuItem;
	}

	public void setMenuItem(JMenuItem menuItem) {
		this.menuItem = menuItem;
	}

	public JPanel getjPanel() {
		return jPanel;
	}

	public void setjPanel(JPanel jPanel) {
		this.jPanel = jPanel;
	}

}
